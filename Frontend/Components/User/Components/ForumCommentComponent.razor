@using Frontend.Models
@using System.Globalization

@if (Comment != null && Comment.User != null)
{
    <div class="d-flex flex-column flex-lg-row p-3 mb-3 generic-card">
        <div class="text-center text-lg-start mb-3 mb-lg-0 me-lg-4" style="min-width: 120px;">
            <div class="fw-bold">
                @Comment.User.Username
            </div>
            <div class="badge bg-secondary">@Comment.User.Role</div>
        </div>

        <div class="flex-grow-1">
            <h5 class="mb-2">@Comment.Title</h5>
            <hr class="my-1" />
            <p class="mb-2">@Comment.Comment</p>
            <hr class="my-1" />
            <small class="text-light">
                Posted on @Comment.Created.ToString("f", CultureInfo.CurrentCulture)
            </small>
        </div>
    </div>
}

@code {
    [Parameter] public ForumComment Comment { get; set; } = new();
}